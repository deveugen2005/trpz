@model IEnumerable<Brand>

@{
    ViewBag.Title = "Index";
}

<h2>Brands</h2>

<p>@Html.ActionLink("Create new Brand", "Create", new { })</p>

<table>
    <tr>
        <th>
            Brand
        </th>
        <th></th>
    </tr>
   @foreach (var item in Model)
    {
       <tr>
           <td>
               @Html.DisplayFor(modelItem => item.Name)
           </td>
           <td>
               @Html.ActionLink("Edit", "Edit", new { id = item.BrandID })
           </td>
           <td>
               @Html.ActionLink("Delete", "Delete", new { id = item.BrandID })
           </td>
           <td>
               @Html.ActionLink("Price", "Details", new { id = item.BrandID })
           </td>

       </tr>
    }
</table>